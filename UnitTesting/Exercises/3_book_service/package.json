{
  "name": "book-service",
  "version": "1.0.0",
  "description": "Demo of unit testing for a service",
  "main": "server.js",
  "directories": {
    "test": "tests"
  },
  "scripts": {
    "test": "jest",
    "start": "node src/server.js"
  },
  "jest": {
    "collectCoverage": true, 
    "coverageReport": ["json", "lcov", "text", "clover"],
    "coverageDirectory": "coverage",
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100, 
        "lines": 100,
        "statements": 100
      }
    }

  },
  "author": "Jay Chakra",
  "license": "ISC",
  "dependencies": {
    "express": "^4.21.2",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.3",
    "mongoose": "^8.9.5",
    "supertest": "^7.0.0"
  }
}
